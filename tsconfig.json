{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./build",
    "allowJs": true,
    "target": "ES2022",
    "alwaysStrict": true,
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"]
}
